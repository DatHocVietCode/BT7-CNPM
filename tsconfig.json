{
  "compilerOptions": {
    /* Đầu ra */
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* Môi trường */
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node", 
    "jsx": "react-jsx",

    /* Type checking */
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
